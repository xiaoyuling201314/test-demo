	<!-- 查询条件  2019-5-29 添加按照文件分组 目的是为了去重 -->
	<sql id="Example_Where_Clause">
		where instrument_id =#{obj.instrumentId} and type=#{obj.type}
		<if test="obj.start != null">
				and time &gt;= #{obj.start}
			</if>
		<if test="obj.end != null">
				and time &lt;= #{obj.end}
			</if>
	</sql>
	<!-- 分页基础查询 -->
	<select id="loadDatagrid" resultMap="BaseResultMap" parameterType="Object">
		select
		<include refid="Base_Column_List" />
		from base_law_instrument_playback
		<include refid="Example_Where_Clause" />
		GROUP BY file
		order by time desc  LIMIT #{rowOffset}, #{pageSize}
	</select>

	<select id="getRowTotal" resultType="java.lang.Integer" parameterType="Object">
		select count(1) as rowTotal
		from
		 (SELECT DISTINCT file  from         base_law_instrument_playback
		<include refid="Example_Where_Clause" />
		)t
	</select>
	
